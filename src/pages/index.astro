---
import '../styles/index.css';
import * as sentencesFile from '../data/sentences.md';

// Get the compiled HTML content
const sentencesContent = await sentencesFile.compiledContent();

// Split by paragraph tags to get individual sentences
const rawSentences = sentencesContent.split('</p>').filter((s: string) => s.trim());

// Parse the HTML sentences - remove <p> tags and clean up
const sentences = rawSentences.map((html: string) => {
	return html.replace(/<p>/g, '').trim();
}).filter((s: string) => s);
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<div class="text_container">
			<h1 id="text-display"></h1>
		</div>
	</body>
	<script define:vars={{ sentences }} is:inline>
		window.sentences = sentences;
	</script>
	<script>
		import { initTextRotation } from '../scripts/index.js';

		initTextRotation((window as any).sentences);
	</script>
</html>
